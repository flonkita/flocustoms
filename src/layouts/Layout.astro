---
const { title = "Flo Custom" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.jpg" class="image">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- SVG responsive -->
    <svg
      class="background-svg"
      xmlns="http://www.w3.org/2000/svg"
      preserveAspectRatio="none"
    >
      <defs>
        <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#f7b733;stop-opacity:1"></stop>
          <stop offset="100%" style="stop-color:#fc4a1a;stop-opacity:1"></stop>
        </linearGradient>
      </defs>
      <rect width="100%" height="100%" fill="url(#grad1)"></rect>
      <circle cx="85%" cy="15%" r="12%" fill="rgba(255,255,255,0.08)"></circle>
      <circle cx="20%" cy="80%" r="18%" fill="rgba(255,255,255,0.06)"></circle>
      <path
        d="M0,70 Q50,90 100,70 T200,70 T300,70 T400,70 T500,70 T600,70 T700,70 T800,70 T900,70 T1000,70 V100 H0 Z"
        fill="rgba(255,255,255,0.05)"
        transform="scale(1.2)"></path>
    </svg>

    <slot />
  </body>
</html>

<style>
  html,
  /* üå∏ Flo Custom Background - Responsive Edition */
body {
    min-height: 100vh;
    margin: 0;
    font-family: "Poppins", sans-serif;

    /* D√©grad√© pastel */
    background: linear-gradient(180deg, #fbe4ee 0%, #fdeef5 50%, #fffafc 100%);

    /* Images superpos√©es */
    background-image: url("/images/papillons.svg"),
      url("/images/papillon-gauche.svg"),
      linear-gradient(180deg, #fbe4ee 0%, #fffafc 100%);

    background-repeat: no-repeat, no-repeat, no-repeat;

    /* Positions et tailles en pourcentage / vw */
    background-position:
      90% 5%,
      /* papillon haut droit */ 10% 95%,
      /* papillon bas gauche */ center; /* d√©grad√© */

    background-size:
      20vw,
      /* papillon haut droit */ 15vw,
      /* papillon bas gauche */ cover; /* d√©grad√© */

    /* Effet lumineux */
    box-shadow: inset 0 0 6vw rgba(255, 192, 203, 0.3);
    overflow-x: hidden;
  }

  @media (max-width: 768px) {
    body {
      background-position:
        85% 8%,
        5% 92%,
        center;
      background-size: 35vw, 25vw, cover;
    }
  }
</style>
