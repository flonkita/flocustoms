---
import logo from "../assets/logo-removebg-preview.png";
import Navbar from "../components/Navbar.astro";

const { title = "Flo Custom" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.jpg" class="image" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main class="main-content">
    <slot />
    </main>
  </body>
</html>

<style>
  html,
  /* üå∏ Flo Custom Background - Responsive Edition */
body {
    min-height: 100vh;
    margin: 0;
    font-family: "Poppins", sans-serif;

    /* D√©grad√© pastel */
    background: linear-gradient(180deg, #fbe4ee 0%, #fdeef5 50%, #fffafc 100%);

    /* Images superpos√©es */
    background-image:
      url("/assets/papillons.svg"), url("/assets/papillons-gauche.svg"),
      linear-gradient(180deg, #fbe4ee 0%, #fffafc 100%);

    background-repeat: no-repeat, no-repeat, no-repeat;

    /* Positions et tailles en pourcentage / vw */
    background-position:
      90% 5%,
      /* papillon haut droit */ 10% 95%,
      /* papillon bas gauche */ center; /* d√©grad√© */

    background-size:
      22vw,
      /* papillon haut droit */ 18vw,
      /* papillon bas gauche */ cover; /* d√©grad√© */

    /* Effet lumineux */
    box-shadow: inset 0 0 6vw rgba(255, 192, 203, 0.3);
    overflow-x: hidden;
  }
  .main-content {
    /* Pousse le contenu vers le bas pour ne pas qu'il soit cach√© par le header */
    /* 100px ou 120px selon la taille de ton logo */
    padding-block-start: 120px;

    max-width: 1200px;
    margin-inline: auto; /* Centre le bloc horizontalement */
    padding-inline: 1rem; /* Ajoute une petite marge de s√©cu sur mobile */
  }

  @media (max-width: 768px) {
    body {
      background-position:
        85% 8%,
        5% 92%,
        center;
      background-size: 40vw, 30vw, cover;
    }

    .background-logo {
      width: 120px;
      max-width: 40%;
    }
  }
</style>
