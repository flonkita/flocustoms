<div class="gallery-grid">
  {
    creations.map((item) => (
      <div class="card">
        <div class="media-box">
          {item.type === "video" ? (
            <video
              src={item.src}
              autoplay
              muted
              loop
              playsinline
              class="media-content"
            />
          ) : (
            /* SINON : C'est une image */
            <img
              src={item.src}
              alt={item.title}
              loading="lazy"
              class="media-content"
            />
          )}

          {item.tag && <span class="tag">{item.tag}</span>}
        </div>

        <div class="content">
          <div class="info">
            <h3>{item.title}</h3>
            {item.price && <span class="price">{item.price}</span>}
