  <div class="chat-header">Assistant Commande ðŸ¦‹</div>

  <div class="chat-body">
    <div id="chat-messages" class="messages" aria-live="polite"></div>
  </div>

  <div class="chat-input">
    <input
      id="chatbot-input"
      type="text"
      placeholder="Ã‰cris ici..."
      aria-label="RÃ©ponse"
      autocomplete="off"
    />
    <button id="chatbot-next" aria-label="Envoyer">âž¤</button>
  </div>
</div>

<script>
  // @ts-nocheck
  (function () {
    const questions = [
      "Super ! Quelle couleur ou thÃ¨me veux-tu pour ta crÃ©ation ? ðŸŽ¨",
      "Souhaites-tu ajouter un texte, un nom ou une date dessus ? âœï¸",
      "Parfait ðŸ˜ Quel est ton Insta pour quâ€™on te contacte ? ðŸ“¸",
    ];

    const messages = [
      { from: 'bot', text: 'Salut ðŸ‘‹ Je suis lâ€™assistant Flo Custom ðŸ¦‹' },
      { from: 'bot', text: 'Dis-moi, que veux-tu personnaliser aujourdâ€™hui ? (Crocs, Coqueâ€¦)' },
    ];

    let step = 0;
    const answers = {};

    const messagesEl = document.getElementById('chat-messages');
    const input = /** @type {HTMLInputElement | null} */ (document.getElementById('chatbot-input'));
    const button = /** @type {HTMLButtonElement | null} */ (document.getElementById('chatbot-next'));

    if (!messagesEl || !input || !button) return;

    function renderMessages() {
      messagesEl.innerHTML = messages
        .map((m, i) => {
          const avatar = m.from === 'bot' ? '<div class="avatar bot">ðŸ¦‹</div>' : '<div class="avatar user">ðŸ‘¤</div>';
          return `<div class="bubble ${m.from}" data-i="${i}">${m.from==='bot'?avatar:''}<p>${m.text}</p>${m.from==='user'?avatar:''}</div>`;
        })
        .join('');
      messagesEl.scrollTop = messagesEl.scrollHeight;
    }

    function botReply(text, delay = 700) {
      setTimeout(() => {
        messages.push({ from: 'bot', text });
        renderMessages();
      }, delay);
    }

    // initial render
    renderMessages();

    function sendFinal(payload) {
      fetch('/api/chatbot', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) })
        .then((r) => r.json().catch(() => ({})))
        .then((data) => {
          if (data && data.forwarded) {
            botReply('Merci ðŸ¦‹ Ta commande est bien envoyÃ©e !');
            botReply('On te contactera sur Insta trÃ¨s vite ðŸ’–', 400);
          } else {
            botReply('Merci ðŸ¦‹ Ta commande est reÃ§ue (webhook non configurÃ©).');
          }
        })
        .catch(() => botReply('Erreur lors de lâ€™envoi, essaie plus tard.'));
    }

    function handleSend() {
      const val = input.value.trim();
      if (!val) return;
      messages.push({ from: 'user', text: val });
      answers[step] = val;
      input.value = '';
      renderMessages();

      if (step < questions.length) {
        botReply(questions[step]);
        step += 1;
      }

      if (step >= questions.length) {
        const payload = { answers: { ...answers } };
        sendFinal(payload);
      }
    }

    button.addEventListener('click', handleSend);
    input.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') handleSend();
    });
  })();
</script>

