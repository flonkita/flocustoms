<script>
  // @ts-nocheck
  (function () {
    // --- 1. CONFIGURATION DES QUESTIONS SUIVANTES ---
    // On ne met pas la question 1 ici, car elle est pos√©e au d√©marrage par le bot
    const nextQuestions = [
      "Super ! Quelle couleur ou th√®me souhaites-tu ? üé®",
      "Souhaites-tu ajouter un texte, un nom ou une date dessus ? ‚úçÔ∏è",
      "As-tu un compte Insta ou un contact (mail/t√©l) pour qu'on te pr√©vienne ? üì≤",
      "As-tu un lien d'inspiration ? (Sinon r√©ponds 'Insta' pour m'envoyer la photo en DM apr√®s ! üì∏)",
    ];

    // Messages de d√©marrage
    let messages = [
      { from: "bot", text: "Salut üëã Je suis l‚Äôassistant Flo Custom üêæ" },
      {
        from: "bot",
        text: "Que veux-tu personnaliser aujourd‚Äôhui ? (Crocs, Coque, Pochette‚Ä¶)",
      },
    ];

    let step = 0;
    let estimatedPrice = "";
    const answers = {};

    // S√©lection des √©l√©ments HTML
    const messagesEl = document.getElementById("chat-messages");
    const scrollContainer = document.getElementById("chat-body-scroll");
    const input = document.getElementById("chatbot-input");
    const button = document.getElementById("chatbot-next");

    // S√©curit√© si le HTML n'est pas charg√©
    if (!messagesEl || !input || !button || !scrollContainer) return;

    // --- 2. FONCTION POUR AFFICHER LES MESSAGES (BULLES) ---
    function appendMessageToDOM(msg) {
      const isBot = msg.from === "bot";

      // Avatar Patte de Chat (Rose)
      const avatarHTML = isBot
        ? `<div class="msg-avatar" style="display:flex; align-items:center; justify-content:center;">
       <svg width="24" height="24" viewBox="0 0 640 640" fill="#ff69b4" xmlns="http://www.w3.org/2000/svg">
         <path d="M298.5 156.9C312.8 199.8 298.2 243.1 265.9 253.7C233.6 264.3 195.8 238.1 181.5 195.2C167.2 152.3 181.8 109 214.1 98.4C246.4 87.8 284.2 114 298.5 156.9zM164.4 262.6C183.3 295 178.7 332.7 154.2 346.7C129.7 360.7 94.5 345.8 75.7 313.4C56.9 281 61.4 243.3 85.9 229.3C110.4 215.3 145.6 230.2 164.4 262.6zM133.2 465.2C185.6 323.9 278.7 288 320 288C361.3 288 454.4 323.9 506.8 465.2C510.4 474.9 512 485.3 512 495.7L512 497.3C512 523.1 491.1 544 465.3 544C453.8 544 442.4 542.6 431.3 539.8L343.3 517.8C328 514 312 514 296.7 517.8L208.7 539.8C197.6 542.6 186.2 544 174.7 544C148.9 544 128 523.1 128 497.3L128 495.7C128 485.3 129.6 474.9 133.2 465.2zM485.8 346.7C461.3 332.7 456.7 295 475.6 262.6C494.5 230.2 529.6 215.3 554.1 229.3C578.6 243.3 583.2 281 564.3 313.4C545.4 345.8 510.3 360.7 485.8 346.7zM374.1 253.7C341.8 243.1 327.2 199.8 341.5 156.9C355.8 114 393.6 87.8 425.9 98.4C458.2 109 472.8 152.3 458.5 195.2C444.2 238.1 406.4 264.3 374.1 253.7z" />
       </svg>
     </div>`
        : ``;

      let innerContent = isBot
        ? `${avatarHTML}<div class="msg-bubble">${msg.text}</div>`
        : `<div class="msg-bubble">${msg.text}</div>`;

      const html = `<div class="message-row ${msg.from}">${innerContent}</div>`;

      messagesEl.insertAdjacentHTML("beforeend", html);

      // Scroll automatique en bas
      setTimeout(() => {
        scrollContainer.scrollTo({
          top: scrollContainer.scrollHeight,
          behavior: "smooth",
        });
      }, 50);
    }

    // Affichage des premiers messages
    messages.forEach((m) => appendMessageToDOM(m));

    // Fonction pour faire parler le bot avec un d√©lai (effet naturel)
    function botReply(text, delay = 800) {
      setTimeout(() => {
        const msg = { from: "bot", text };
        messages.push(msg);
        appendMessageToDOM(msg);
      }, delay);
    }

    // --- 3. LOGIQUE DES PRIX (TON NOTION) ---
    function detectPrice(userText) {
      const text = userText.toLowerCase();

      // R√®gle 1 : Crocs (50-60‚Ç¨)
      if (text.includes("croc") || text.includes("sabot")) {
        return "env. 50-60‚Ç¨";
      }
      // R√®gle 2 : Coques et Passeports (15‚Ç¨)
      else if (
        text.includes("coque") ||
        text.includes("pochette") ||
        text.includes("passeport") ||
        text.includes("tel")
      ) {
        return "15‚Ç¨";
      }
      // Produit inconnu
      else {
        return null;
      }
    }

    // --- 4. ENVOI FINAL (FETCH) ---
    function sendFinal(payload) {
      // Petit message d'attente
      botReply("Je note tout √ßa... üìù", 500);

      fetch("/pages/api/chatbot", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload),
      })
        .then((r) => r.json().catch(() => ({})))
        .then((data) => {
          // Succ√®s
          botReply(
            `Merci ! Le prix estim√© est de <b>${estimatedPrice}</b>. ‚ú®`,
            1200
          );
          botReply(
            "Ta demande est envoy√©e ! On revient vers toi tr√®s vite sur Insta/Mail pour valider. üíñ",
            2000
          );
        })
        .catch(() => {
          // Erreur technique
          botReply(
            "Oups, je n'arrive pas √† envoyer la commande. Peux-tu nous √©crire directement sur Insta ? üòì"
          );
        });
    }

    // --- 5. GESTION DU CLIC "ENVOYER" ---
    function handleSend() {
      const val = input.value.trim();
      if (!val) return;

      // Affiche le message de l'utilisateur
      const msg = { from: "user", text: val };
      messages.push(msg);
      appendMessageToDOM(msg);

      // Sauvegarde la r√©ponse
      answers[step] = val;
      input.value = "";
      input.focus();

      // --- LOGIQUE √âTAPE PAR √âTAPE ---

      // √âTAPE 0 : LE CHOIX DU PRODUIT (C'est l√† qu'on d√©finit le prix)
      if (step === 0) {
        const priceFound = detectPrice(val);

        if (priceFound) {
          // Si on a reconnu le produit
          estimatedPrice = priceFound;
          botReply(
            `√áa marche ! Pour ce type de cr√©ation, c'est g√©n√©ralement <b>${estimatedPrice}</b>. On continue ? ‚ú®`
          );

          // On passe √† la question suivante apr√®s 1.5s
          setTimeout(() => {
            botReply(nextQuestions[0]);
            step += 1;
          }, 1500);
        } else {
          // Si on n'a pas compris le produit
          botReply(
            "Je ne suis pas s√ªre du tarif pour √ßa ü§î. C'est pour des Crocs ou une Coque/Pochette ?"
          );
          // On reste √† step 0 pour qu'il r√©ponde √† nouveau
          return;
        }
      }
      // AUTRES √âTAPES
      else if (step > 0) {
        // Si on a encore des questions dans la liste
        if (step < nextQuestions.length) {
          botReply(nextQuestions[step]);
          step += 1;
        }
        // Si c'√©tait la derni√®re question
        else {
          const payload = {
            answers: { ...answers },
            estimatedPrice: estimatedPrice, // On ajoute le prix au r√©cap
          };
          sendFinal(payload);
        }
      }
    }

    button.addEventListener("click", handleSend);
    input.addEventListener("keydown", (e) => {
      if (e.key === "Enter") handleSend();
    });
  })();
</script>

